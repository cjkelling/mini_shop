<% @items.each do |item| %>
  <p>Name: <%= item.name %></p>
  <p>Description: <%= item.description %></p>
  <p>Price: <%= item.price %></p>
  <% if item.active? %>
    <p>Item is Active</p>
  <% else %>
    <p>Item is Inactive</p>
  <% end %>
  <p><img src= <%= item.image %></img></p>
  <p>Inventory Count: <%= item.inventory %></p>
  <p>Selling Merchant: <%= item.merchant.name %></p>
<% end %>

<% if @merchant %>
  <p><%= link_to 'New Item', "/merchants/#{@merchant.id}/items/new" %></p>
<% end %>
